@model SalturBlog.Models.AuthorModel

    <div class="sidebar-widget mb-50 about-widget">
        <div class="widget-title text-center">
            <h4 class="title mb-30">Hakkımda</h4>
        </div>
        <div class="author-img text-center">
            <img src="@Model.AuthorImageUrl" alt="@Model.AuthorName" />
        </div>
        <div class="author-content text-center">
            <span class="auth-title">@Model.AuthorName</span>
            <p style="text-align: justify;text-justify: inter-word;">@Model.AuthorAbout</p>
            <ul class="sidebar-social">
                <li><a href="@Model.AuthorTwitter" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                <li><a href="@Model.AuthorFacebook" target="_blank"><i class="fa fa-facebook"></i></a></li>
                <li><a href="@Model.AuthorInstagram" target="_blank"><i class="fa fa-instagram"></i></a></li>
            </ul>
        </div>
    </div>



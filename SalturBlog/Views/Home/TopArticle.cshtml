@model IEnumerable<SalturBlog.Models.ArticleModel>

<div class="sidebar-widget mb-50">
    <div class="widget-title text-center">
        <h4 class="title mb-30">Popüler</h4>
    </div>
    <div class="tab-content fade in">
        <div class="tab-pane active" id="home">
            <ul class="thumb-list">           
                @foreach (var item in Model)
                {
                    <li class="mb-30">
                        <div class="thumb-img">
                            <a href="/@SalturBlog.Utils.UrlDuzenleme.UrlCevir(@item.ArticleCatagory).ToLower()/@item.ArticLinkUrl">
                            <img src="@item.HomeArticleImageUrl" alt="@item.ArticleTitle" /></a>
                        </div>
                        <div class="thumb-text">
                            <a href="/@SalturBlog.Utils.UrlDuzenleme.UrlCevir(@item.ArticleCatagory).ToLower()/@item.ArticLinkUrl"><h4>@item.ArticleTitle</h4></a>
                            <span>@item.ArticleDate</span> <i style="margin-left:30%;" class="fa fa-eye">@item.ArticleReading</i>
                        </div>
                    </li>
                }  
            </ul>
        </div>

    </div>
</div>


